{
    "name": "app/commission-calculator",
    "description": "A simple application for calculating commissions based on configurable rates.",
    "license": "MIT",
    "authors": [
        {
            "name": "Rumen Damyanov",
            "email": "dev@rumenx.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "symfony/yaml": "^7.2",
        "symfony/http-client": "^7.2",
        "symfony/http-client-contracts": "^3.0",
        "psr/cache": "^3.0",
        "symfony/cache": "^7.2",
        "psr/log": "^3.0",
        "symfony/cache-contracts": "^3.0",
        "symfony/dotenv": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpunit/php-code-coverage": "^11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage phpunit --coverage-html tests/coverage"
    }
}
