# Application
APP_ENV=dev
APP_DEBUG=true

# BIN Lookup Service
BIN_LOOKUP_URL=https://lookup.binlist.net
BIN_LOOKUP_API_KEY=your_bin_lookup_api_key
BIN_LOOKUP_RATE_LIMIT=100 # requests per minute
BIN_LOOKUP_CACHE_TTL=3600 # seconds

# Exchange Rates Service
EXCHANGE_RATES_URL=https://api.apilayer.com/exchangerates_data/latest
EXCHANGE_RATES_API_KEY=your_exchange_rates_api_key
EXCHANGE_RATES_RATE_LIMIT=30 # requests per minute
EXCHANGE_RATES_CACHE_TTL=3600 # seconds

# Cache settings
CACHE_ENABLED=true
CACHE_NAMESPACE=commission_calculator
DEFAULT_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=redis # options: redis, file, memory
REDIS_URL=redis://localhost:6379

# Logging (optional)
LOG_CHANNEL=commission_calculator
LOG_LEVEL=info
